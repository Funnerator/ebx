command :start do |c|
  c.syntax = 'ebx start [env] [options]'
  c.summary = 'Create an environment'

  c.action do |args, options|
    ENV['AWS_ENV'] ||= (args.shift || 'development')
    settings = {
      app_name: 'test_app',
      app_description: 'test desc',
      version_description: 'a version'
    }

    AwsCredentialConfig.set_credentials

    app = AwsApplication.new(settings)
    app.create

    ver = AwsApplicationVersion.new(settings)
    ver.create

    env = AwsEnvironment.new(settings)
    env.create
    
    say env.describe[:environments].first.to_s
  end
end

command :status do |c|
  c.action do |args, options|
    ENV['AWS_ENV'] ||= (args.shift || 'development')
    AwsCredentialConfig.set_credentials

    settings = {
      app_name: 'test_app',
      app_description: 'test desc',
      version_description: 'a version'
    }
    env = AwsEnvironment.new(settings)
    env.describe[:environments].each do |env|
      say env.to_s
    end
  end
end
